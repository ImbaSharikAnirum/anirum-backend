{
  "kind": "collectionType",
  "collectionName": "up_users",
  "info": {
    "name": "user",
    "description": "",
    "singularName": "user",
    "pluralName": "users",
    "displayName": "User"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "username": {
      "type": "string",
      "minLength": 3,
      "unique": true,
      "configurable": false,
      "required": true
    },
    "email": {
      "type": "email",
      "minLength": 6,
      "configurable": false,
      "required": true
    },
    "provider": {
      "type": "string",
      "configurable": false
    },
    "password": {
      "type": "password",
      "minLength": 6,
      "configurable": false,
      "private": true,
      "searchable": false
    },
    "resetPasswordToken": {
      "type": "string",
      "configurable": false,
      "private": true,
      "searchable": false
    },
    "confirmationToken": {
      "type": "string",
      "configurable": false,
      "private": true,
      "searchable": false
    },
    "confirmed": {
      "type": "boolean",
      "default": false,
      "configurable": false
    },
    "blocked": {
      "type": "boolean",
      "default": false,
      "configurable": false
    },
    "role": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.role",
      "inversedBy": "users",
      "configurable": false
    },
    "avatar": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images", "files", "videos", "audios"]
    },
    "courses": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::course.course",
      "mappedBy": "teacher"
    },
    "name": {
      "type": "string"
    },
    "family": {
      "type": "string"
    },
    "whatsapp_phone": {
      "type": "string"
    },
    "telegram_username": {
      "type": "string"
    },
    "telegram_phone": {
      "type": "string"
    },
    "birth_date": {
      "type": "date"
    },
    "students": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::student.student",
      "mappedBy": "owner"
    },
    "invoices": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::invoice.invoice",
      "mappedBy": "owner"
    },
    "bonusBalance": {
      "type": "decimal",
      "default": 0,
      "min": 0,
      "description": "Текущий баланс бонусов пользователя"
    },
    "totalEarnedBonuses": {
      "type": "decimal",
      "default": 0,
      "min": 0,
      "description": "Общая сумма заработанных бонусов"
    },
    "totalSpentBonuses": {
      "type": "decimal",
      "default": 0,
      "min": 0,
      "description": "Общая сумма потраченных бонусов"
    },
    "referralCodes": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::referral-code.referral-code",
      "mappedBy": "referrer"
    },
    "pinterestAccessToken": {
      "type": "text"
    },
    "pinterestRefreshToken": {
      "type": "text"
    },
    "guides": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::guide.guide",
      "mappedBy": "users_permissions_user"
    },
    "savedGuides": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::guide.guide",
      "mappedBy": "savedBy"
    }
  }
}
